<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="2"
        android:rowCount="6"
        android:fadeScrollbars="false"
        android:contextClickable="false"
        android:columnOrderPreserved="false"
        android:clickable="false"
        android:useDefaultMargins="true"
        android:transitionGroup="false"
        android:visibility="visible"
        android:focusable="false"
        android:baselineAligned="false"
        android:measureWithLargestChild="false"
        android:touchscreenBlocksFocus="false"
        android:background="#ffffff">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Tiempo Total"
                android:id="@+id/botonTiempo"
                android:layout_row="0"
                android:layout_column="0"
                android:background="#f8e42f"
                android:textStyle="bold|italic"
                android:textSize="30dp"
                android:drawableRight="@drawable/crono60x51"
                android:layout_weight="1" />
        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/reloj_a_cero"
                android:id="@+id/boton1"
                android:layout_row="1"
                android:layout_column="0"
                android:drawableLeft="@drawable/camiseta139x60"
                android:background="#ffffff"
                android:layout_weight="1"
                android:textSize="21dp"
                android:layout_margin="5dp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/reloj_a_cero"
                android:id="@+id/boton2"
                android:layout_row="1"
                android:drawableLeft="@drawable/camiseta239x60"
                android:background="#ffffff"
                android:singleLine="false"
                android:layout_weight="1"
                android:textSize="21dp"
                android:layout_margin="5dp"
                android:layout_column="1" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/reloj_a_cero"
                android:id="@+id/boton3"
                android:layout_row="2"
                android:layout_column="0"
                android:drawableLeft="@drawable/camiseta339x60"
                android:background="#ffffff"
                android:layout_weight="1"
                android:textSize="21dp"
                android:layout_margin="5dp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/reloj_a_cero"
                android:id="@+id/boton4"
                android:layout_row="2"
                android:layout_column="1"
                android:drawableLeft="@drawable/camiseta439x60"
                android:background="#ffffff"
                android:textSize="21dp"
                android:layout_weight="1"
                android:layout_margin="5dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/reloj_a_cero"
                android:id="@+id/boton5"
                android:layout_row="3"
                android:layout_column="0"
                android:drawableLeft="@drawable/camiseta539x60"
                android:nestedScrollingEnabled="false"
                android:layout_weight="1"
                android:background="#ffffff"
                android:textSize="21dp"
                android:layout_margin="5dp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/reloj_a_cero"
                android:id="@+id/boton6"
                android:layout_row="3"
                android:layout_column="1"
                android:drawableLeft="@drawable/camiseta639x60"
                android:background="#ffffff"
                android:textSize="21dp"
                android:layout_weight="1"
                android:layout_margin="5dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/reloj_a_cero"
                android:id="@+id/boton7"
                android:layout_row="4"
                android:layout_column="0"
                android:drawableLeft="@drawable/camiseta739x60"
                android:background="#ffffffff"
                android:layout_weight="1"
                android:textSize="21dp"
                android:layout_margin="5dp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/reloj_a_cero"
                android:id="@+id/boton8"
                android:layout_row="4"
                android:layout_column="1"
                android:drawableLeft="@drawable/camiseta839x60"
                android:background="#ffffffff"
                android:textSize="21dp"
                android:layout_weight="1"
                android:layout_margin="5dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/reloj_a_cero"
                android:id="@+id/boton9"
                android:layout_row="5"
                android:layout_column="0"
                android:drawableLeft="@drawable/camiseta939x60"
                android:background="#ffffff"
                android:layout_weight="1"
                android:textSize="21dp"
                android:layout_margin="5dp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/reloj_a_cero"
                android:id="@+id/boton10"
                android:layout_row="5"
                android:layout_column="1"
                android:drawableLeft="@drawable/camiseta1039x60"
                android:background="#ffffff"
                android:layout_weight="1"
                android:textSize="21dp"
                android:layout_margin="5dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/reloj_a_cero"
                android:id="@+id/boton11"
                android:layout_row="6"
                android:layout_column="0"
                android:drawableLeft="@drawable/camiseta1139x60"
                android:background="#ffffff"
                android:layout_weight="1"
                android:textSize="21dp"
                android:layout_margin="5dp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/reloj_a_cero"
                android:id="@+id/boton12"
                android:layout_row="6"
                android:layout_column="1"
                android:drawableLeft="@drawable/camiseta2539x60"
                android:background="#ffffff"
                android:textSize="21dp"
                android:singleLine="false"
                android:layout_weight="1"
                android:layout_margin="5dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Empezar"
                    android:id="@+id/botonEmpezar"
                    android:layout_gravity="center_horizontal"
                    android:duplicateParentState="false"
                    android:textStyle="bold|italic"
                    android:textSize="30dp"
                    android:background="#e9f8e42f"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:drawableLeft="@drawable/silbato60x51"
                    android:layout_weight="1"
                    android:layout_column="0" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pausa"
                    android:id="@+id/botonPausa"
                    android:layout_gravity="center_horizontal"
                    android:duplicateParentState="false"
                    android:textStyle="bold|italic"
                    android:textSize="30dp"
                    android:background="#e9f8e42f"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:drawableLeft="@drawable/silbato60x51"
                    android:layout_weight="1"
                    android:layout_column="0" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Continuar"
                    android:id="@+id/botonContinuar"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:textSize="30dp"
                    android:textStyle="bold|italic"
                    android:background="#e9f8e42f"
                    android:drawableLeft="@drawable/silbato60x51"
                    android:layout_weight="1"
                    android:layout_column="0" />
            </RelativeLayout>
        </TableRow>


    </TableLayout>



</LinearLayout>